{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "./lib",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["node_modules/@azure", "node_modules/@types", "node_modules/cypress/types"],
    "types": ["cypress", "node"],
    "paths": {
      "azure/msal-browser": ["./src/client/azure/msal-browser/index.ts"],
      "azure/msal-browser/*": ["./src/client/azure/msal-browser/*"],
      "azure/msal-common": ["./src/client/azure/msal-common/index.ts"],
      "azure/msal-common/*": ["./src/client/azure/msal-common/*"]
    }
  },
  "include": ["src"],
  "exclude": ["lib"]
}